            border-radius: 10px 10px 0 0;
            object-fit: cover;
            height: 300px;
        }

        .row-cols-1 .col {
            flex: 1 1 100%;
        }
        #id1{

            background: linear-gradient(300deg, #2eb501, #074801,#f8fcfa);
  background-size: 180% 180%;
