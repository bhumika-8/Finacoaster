<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Sign Up</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link href="style.css" rel="stylesheet" />
    <style>
      /* Center the body using Flexbox */
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Full height of the viewport */
        margin: 0;
       
      }

      /* Style the form */
      .form-signin {
        max-width: 400px;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 128, 0, 0.6); /* Light glowing dark green shadow */
        width: 100%; /* Ensure the form doesn't exceed its container */
      }

      /* Increase gap between input fields */
      .form-floating {
        margin-bottom: 1.5rem;
      }

      /* Green button */
      .btn-primary {
        background-color: #28a745;
        border-color: #28a745;
      }

      /* Change font for sign-up heading */
      h1.h3 {
        font-family: 'Arial', sans-serif;
        text-align: center;
        font-weight: bold;
        font-size: 2rem;
      }

      /* Glowing shadow for form border */
      .form-signin {
        border: 2px solid #28a745; /* Dark green border */
        box-shadow: 0 0 10px rgba(0, 128, 0, 0.7); /* Glowing effect */
      }
    </style>
  </head>
  <body data-bs-theme="dark">
    <main class="form-signin w-100 m-auto">
      <form action="/signup" method="post">
        <h1 class="h3 mb-3 fw-normal">Sign Up</h1>

        <div class="form-floating">
          <input
            type="text"
            name="username"
            class="form-control"
            id="floatingInput"
            placeholder="name@example.com"
            fdprocessedid="38uw7o"
          />
          <label for="floatingInput">Username</label>
        </div>

        <div class="form-floating">
          <input
            type="email"
            name="email_user"
            class="form-control"
            id="emailInput"
            placeholder="name@example.com"
            fdprocessedid="38uw7o"
          />
          <label for="emailInput">Email</label>
        </div>

        <div class="form-floating">
          <input
            type="password"
            name="password"
            class="form-control"
            id="floatingPassword"
            placeholder="Password"
            fdprocessedid="s5fwj8"
          />
          <label for="floatingPassword">Password</label>
        </div>

        <button class="btn btn-primary w-100 py-2" type="submit" fdprocessedid="yuxia">
          Sign Up
        </button>
      </form>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="sign.js"></script>
  </body>
</html>
